#!/bin/sh

XP_SETUP_URL=http://releases.xp-framework.net/setup
LIB_XP_DIR=~/xp
CONF_XP_DIR=
DEFAULT_XP_INI=~/bin/xp.ini
TARGET_XP_INI=~/.xp/xp-$1.ini

if [ ! $1 ]
then
  echo "USAGE: $0 <version>"
  exit 1
fi

if [ -e ${LIB_XP_DIR}/$1 ]
then
  echo "$1 doeas allready exist - aborting"
  exit 1
fi

cd ${LIB_XP_DIR}
wget ${XP_SETUP_URL}/$1 -O - | php -- -d ~/bin
if [ -f ${DEFAULT_XP_INI} ]
then
  mv ${DEFAULT_XP_INI} ${TARGET_XP_INI}
fi

